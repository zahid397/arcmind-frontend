// src/components/StatusBanner.jsx
import React from 'react';
import './StatusBanner.css';

const StatusBanner = ({ mode, message, isChecking, onWakeClick, lastChecked }) => {
    const getBannerClass = () => {
        switch (mode) {
            case 'live': return 'status-banner live';
            case 'demo': return 'status-banner demo';
            default: return 'status-banner checking';
        }
    };

    const formatTime = (date) => {
        if (!date) return '';
        return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
    };

    return (
        <div className={getBannerClass()}>
            <div className="status-content">
                <div className="status-left">
                    <span className="status-icon">
                        {mode === 'live' ? 'âœ…' : 
                         mode === 'demo' ? 'ðŸ”‹' : 'ðŸ”„'}
                    </span>
                    <span className="status-text">{message}</span>
                    
                    {lastChecked && mode === 'demo' && (
                        <span className="last-checked">
                            Last checked: {formatTime(lastChecked)}
                        </span>
                    )}
                </div>
                
                {mode === 'demo' && (
                    <button 
                        className="wake-button"
                        onClick={onWakeClick}
                        disabled={isChecking}
                    >
                        {isChecking ? (
                            <>
                                <span className="spinner"></span>
                                Waking up...
                            </>
                        ) : (
                            'ðŸš€ Wake Backend'
                        )}
                    </button>
                )}
            </div>
        </div>
    );
};

export default StatusBanner;
